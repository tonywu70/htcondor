{
	"$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"principalId": {
			"type": "string",
			"metadata": {
				"description": "Principal ID to set the access for"
			}
		},
		"keyvaultName": {
			"type": "string",
			"metadata": {
				"description": "The storage account to set access for"
			}
		}
	},
	"variables": {
		"owner": "[concat('/subscriptions/', subscription().subscriptionId, '/providers/Microsoft.Authorization/roleDefinitions/', '8e3af657-a8ff-443c-a75c-2fe8c4bcb635')]",
		"authAPIVersion": "2016-07-01",
        "RBACResourceName": "[concat(parameters('keyvaultName'),'/Microsoft.Authorization/',parameters('principalId'))]"
	},
	"resources": [{
		"apiVersion": "[variables('authAPIVersion')]",
		"name": "[variables('RBACResourceName')]",
		"type": "Microsoft.Authorization/roleAssignments",
		"properties": {
			"roleDefinitionId": "[variables('owner')]",
			"principalId": "[parameters('principalId')]",
			"scope": "[concat('Microsoft.KeyVault/vaults/', parameters('keyvaultName'))]"
		}
	}]
}
