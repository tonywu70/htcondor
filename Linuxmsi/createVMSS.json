{
	"$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"adminUsername": {
			"type": "string",
			"metadata": {
				"description": "Username for the Virtual Machine."
			}
		},
		"adminPassword": {
			"type": "securestring",
			"metadata": {
				"description": "Password for the Virtual Machine."
			}
		},
		"linuxOSVersion": {
			"type": "string",
			"allowedValues": ["Ubuntu 16.04-LTS"],
			"metadata": {
				"description": "The Ubuntu version for the VM. This will pick a fully patched image of this given Ubuntu version."
			}
		},
		"location": {
			"type": "string",
			"metadata": {
				"description": "The Location For the resources"
			}
		},
		"vmSize": {
			"type": "string",
			"metadata": {
				"description": "The size of the VM to create"
			}
		},
		"overProvision": {
			"type": "bool",
			"metadata": {
				"description": "Over Provision VMSS Instances"
			}
		},
		"vmssName": {
			"type": "string",
			"metadata": {
				"description": "The name of the scale set"
			}
		},
		"vmssPrefix": {
			"type": "string",
			"metadata": {
				"description": "The name prefix for the VMs in the scale set"
			}
		},
		"nicName": {
			"type": "string",
			"metadata": {
				"description": "The nic name for the VMs in the scale set"
			}
		},
		"subnetRef": {
			"type": "string",
			"metadata": {
				"description": "The subnet ref for the VMs in the scale set"
			}
		},
		"networkSecurityGroupName": {
			"type": "string",
			"metadata": {
				"description": "The NSG Name to assocaite with the NIC in the VM"
			}
		},
		"storageAccountUri": {
			"type": "string",
			"metadata": {
				"description": "The storage account URI for boot diagnostics for the VMs in the scale set"
			}
		}
	},
	"variables": {
		"computeAPIVersion": "2017-03-30",
		"managedIdentityAPIVersion": "2015-08-31-PREVIEW"
	},
	"resources": [{
		"type": "Microsoft.Compute/virtualMachineScaleSets",
		"name": "[parameters('vmssName')]",
		"location": "[parameters('location')]",
		"apiVersion": "[variables('computeAPIVersion')]",
		"sku": {
			"name": "[parameters('vmSize')]",
			"tier": "Standard",
			"capacity": 0
		},
		"identity": {
			"type": "systemAssigned"
		},
		"properties": {
			"upgradePolicy": {
				"mode": "Manual"
			},
			"overprovision": "[parameters('overProvision')]",
			"virtualMachineProfile": {
				"storageProfile": {
					"osDisk": {
						"caching": "ReadOnly",
						"createOption": "FromImage"
					},
					"imageReference": {
						"publisher": "Canonical",
						"offer": "UbuntuServer",
						"sku": "16.04-LTS",
						"version": "latest"
					}
				},
				"osProfile": {
					"computerNamePrefix": "[parameters('vmssPrefix')]",
					"adminUsername": "[parameters('adminUsername')]",
					"adminPassword": "[parameters('adminPassword')]"
				},
				"networkProfile": {
					"networkInterfaceConfigurations": [{
						"name": "[parameters('nicName')]",
						"properties": {
							"primary": true,
							"ipConfigurations": [{
								"name": "ipconfig1",
								"properties": {
									"subnet": {
										"id": "[parameters('subnetRef')]"
									}
								}
							}],
							"networkSecurityGroup": {
								"id": "[resourceId('Microsoft.Network/networkSecurityGroups', Parameters('networkSecurityGroupName'))]"
							}
						}
					}]
				},
				"diagnosticsProfile": {
					"bootDiagnostics": {
						"enabled": "true",
						"storageUri": "[parameters('storageAccountUri')]"
					}
				}
			}
		}
	}],
	"outputs": {
		"principalId": {
			"type": "string",
			"value": "[reference(concat(resourceId('Microsoft.Compute/virtualMachineScaleSets/', parameters('vmssName')),'/providers/Microsoft.ManagedIdentity/Identities/default'),variables('managedIdentityAPIVersion')).principalId]"
		}
	}
}
